  Hirschberg:{ t:'Hirschberg estimate (15 PD/mm)', u:'https://pubmed.ncbi.nlm.nih.gov/3557878/' },
  ACA:{ t:'AC/A (gradient) â€” normal ~3â€“5:1', u:'https://www.aao.org/education/disease-review/strabismus-accommodative-esotropia' },
